<Window x:Class="phd2mm_wpf.Window3_CreateOrDuplicateTheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:phd2mm_wpf"
        mc:Ignorable="d"
        Title="Create or Duplicate Theme" Height="245" Width="510"
        SizeToContent="WidthAndHeight" Loaded="Window3_CreateOrDuplicateTheme_Loaded">
    <Grid Style="{DynamicResource GGC_Grid_Style}" Height="229.04" Width="510">
        <Button x:Name="CreateNewTheme_Button" Content="Create New Theme" HorizontalAlignment="Left" Margin="82,166,0,0" VerticalAlignment="Top" Height="46" Width="154" FontSize="16" Click="CreateNewTheme_Button_Click"/>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Margin="305,166,0,0" VerticalAlignment="Top" Height="46" Width="82" FontSize="16" Click="Cancel_Button_Click"/>
        <TextBox x:Name="NewThemeName_TextBox" HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="27"  Width="490" FontSize="14" VerticalContentAlignment="Center"/>
        <Label x:Name="Label1" Content="Duplicating theme:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="Label2" Content="Theme to be duplicated" HorizontalAlignment="Left" Margin="159,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Enter a name for your theme below:" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
